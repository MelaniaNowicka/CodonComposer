<UserControl x:Class="CodonOptimizer.Pages.Optimalization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="0 50 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="CPBscoreTextBox" HorizontalAlignment="Left" Height="25" Margin="86,182,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"/>
        <DataGrid Name="BeforeOptimizationDataGrid" HorizontalAlignment="Left" Margin="20,54,-141,0" Grid.Row="2" VerticalAlignment="Top" Height="109" Width="700" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" CanUserResizeRows="False" IsReadOnly="True" BorderThickness="1" BorderBrush="#FF333333" />
        <Button Name ="LoadORFButton" Content="Load ORF" Grid.Row="1" HorizontalAlignment="Left" Height="30" Margin="20,0,-152,0" VerticalAlignment="Top" Width="700" Click="LoadORFButton_Click" />
        <DataGrid Name ="OptimalizedSeqDataGrid" Grid.Row="2" HorizontalAlignment="Left" Height="85" Margin="20,315,-139,0" VerticalAlignment="Top" Width="700" BorderThickness="1" BorderBrush="#FF333333"/>
        <Label Content="OPTIMIZED ORF" HorizontalAlignment="Left" Height="19" Margin="20,281,0,0" Grid.Row="2" VerticalAlignment="Top" Width="196" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" FontSize="14"/>
        <Label Content="CPB:" HorizontalAlignment="Left" Margin="20,182,0,0" Grid.Row="2" VerticalAlignment="Top" FontWeight="Bold" FontSize="15"/>
        <Label Content="CURRENT ORF" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="132" FontWeight="Bold" Grid.Row="2" FontSize="14"/>
        <Button Content="Optimize ORF" HorizontalAlignment="Left" Height ="30" Margin="20,229,-140,0" Grid.Row="2" VerticalAlignment="Top" Width="700"/>

    </Grid>
</UserControl>
