<mui:ModernWindow x:Class="CodonOptimizer.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  Title="Codon Optimizer" 
                  Width="1024" Height="758"
                  ResizeMode="CanResize"
                  WindowStartupLocation="CenterScreen"
                  Style="{StaticResource BlankWindow}" IsManipulationEnabled="True">
    
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Pages/HowToUse.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="HOW TO USE" Source="/Pages/HowToUse.xaml" />
                <mui:Link DisplayName="CODON CONTEXT RANKING" Source="/Pages/CCranking.xaml" />
                <mui:Link DisplayName="PARAMETERS" Source="/Pages/Parameters.xaml"/>
                <mui:Link DisplayName="OPTIMIZATION" Source="/Pages/Optimization.xaml" />
                <mui:Link DisplayName="ABOUT" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</mui:ModernWindow>
